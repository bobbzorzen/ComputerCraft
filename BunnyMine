tArgs = {...}
 
ignoreCount = tArgs[1]
local depthCounter = 0
local notDone = true
function digRound(ignoreList)
        local dig = true
        for i=1,4 do
                dig = true
                for j=1,ignoreList do
                        turtle.select(j)
                        if turtle.compare() then
                                dig = false
                        end
                end
                if dig then
                        turtle.dig()
                end
                turtle.turnRight()
        end
end
function tryMoveForward()
        if turtle.detect() then
                turtle.dig()
        end
        turtle.forward()
end
function tryDigDown()
        turtle.select(1)
        if not turtle.digDown() then
                if turtle.detectDown() then
                        return false
                end
        end
        return true
end
 
function reposition()
        tryMoveForward()
        tryMoveForward()
        turtle.turnRight()
        tryMoveForward()
        turtle.turnLeft()
end
 
 
turtle.digDown()
turtle.down()
 
while notDone do
        if not tryDigDown() then
                notDone = false
        end
        turtle.down()
        digRound(ignoreCount)
        depthCounter = depthCounter + 1
end
 
for i=1,depthCounter do
        turtle.up()
end
 
turtle.select(1)
turtle.placeDown()
reposition()
